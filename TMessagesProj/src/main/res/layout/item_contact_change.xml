<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <ImageView android:layout_gravity="right"
        android:layout_marginRight="8dp"
        android:id="@+id/imageView"
        android:layout_width="48dp"
        android:layout_height="48dp" />
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginRight="64dp"
        android:layout_height="wrap_content">

        <TextView android:gravity="right"
            android:textColor="#000"
            android:textSize="16sp" android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView android:gravity="right" android:layout_marginTop="4dp"
            android:textSize="13sp" android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>


</FrameLayout>