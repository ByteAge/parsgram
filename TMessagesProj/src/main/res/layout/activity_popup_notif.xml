<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent" android:background="#fff"
    android:minWidth="280dp" android:minHeight="360dp"
    android:layout_height="match_parent">

    <TextView android:padding="16dp" android:gravity="center" android:id="@+id/title" android:textColor="#fff"
        android:background="#EA7264" android:textSize="17sp"
        android:layout_width="match_parent" android:singleLine="true" android:ellipsize="end"
        android:layout_height="wrap_content" />

    <ImageView android:id="@+id/imageView"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:layout_width="240dp" android:layout_marginTop="16dp"
        android:layout_height="160dp" />

    <TextView android:gravity="center" android:textColor="#000" android:id="@+id/content" android:padding="16dp"
        android:layout_width="match_parent" android:maxLines="4" android:ellipsize="end" android:textSize="16sp"
        android:layout_height="0dp" android:layout_weight="1" />

    <TextView android:padding="16dp" android:layout_marginTop="16dp" android:text="بزن بریم" android:gravity="center"
        android:textSize="17sp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
        android:layout_width="match_parent" android:textColor="#fff" android:background="#EA7264" android:id="@+id/ok"
        android:layout_height="wrap_content" />

</LinearLayout>